<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jokes.AddJoke"
             BackgroundColor="Black" Opacity="0.6">
    <ContentPage.Content BackgroundColor="Black" Opacity="0.6">
        <StackLayout Margin="20,0">
            <Label Text="Add new joke" TextColor="White" HorizontalTextAlignment="Center" Margin="0,50" FontSize="35" />
            <Editor x:Name="jokeInput" TextColor="Black" Placeholder="Enter Your Joke" AutoSize="TextChanges" IsTextPredictionEnabled="True" IsSpellCheckEnabled="True" />
            <Button Text="Add Joke" TextColor="White" Clicked="addButton_Clicked" />
            
            <ActivityIndicator x:Name="loadingAddJoke" Margin="0,25,0,0" Color="#2196F3" IsRunning="True" IsVisible="False"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>